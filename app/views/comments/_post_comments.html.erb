<% comments.each do |comment| %>
  <div class="row">
    <div class="col-sm-12">


      <div class="card bottom-buffer">
        <div class="card-body">
          <p><%= link_to UserDecorator.new(comment.user).name,
                         user_path(comment.user) %> <br>
            <span class="text-secondary">Posted on <%= comment.formatted_date %></span></p>

          <p><%= comment.body %></p>
        </div>
        <div class="card-header">
          <% if false %>
            <%= render partial: 'post_actions', locals: { post: post, user: user } %>

            <div class="row">
              <div class="col-sm-12">
                <%= comment.likes_info(current_user) %>
              </div>
            </div>
          <% end %>
        </div>

        <div class="card-header">
          <% if current_user && current_user.id == comment.user.id %>
            <div class="float-right">
              <%= link_to 'Delete', post_comment_path(post, comment), method: :delete, data: { confirm: 'You sure?' } %>
            </div>
          <% end %>
        </div>
      </div>

    </div>
  </div>
<% end %>

<%= render partial: 'comments/form', locals: { post: post } %>