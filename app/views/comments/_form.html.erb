<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <%= form_with model: [post, Comment.new] do |form| %>
          <div class="form-group">
            <%= form.text_area :body, placeholder: 'Write a comment...', class: 'form-control' %>
          </div>
          <%= form.submit 'Comment', class: 'btn btn-primary float-right' %>
        <% end %>
      </div>
    </div>
  </div>
</div>