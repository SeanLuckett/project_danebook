<div class="row">
  <div class="col-sm-10 offset-sm-1 .offset-md-1">
    <div class="row">
      <div class="col-sm-12">
        <%= render partial: 'users/profile_header', locals: { user: user } %>
      </div>
    </div>

    <div class="row top-buffer">
      <div class="col-sm-12">
        <div class="card">
          <div class="card-header text-center h4">Friends</div>
          <div class="card-body">

            <% unless friends.count > 0 %>
              <h2 class="h4">Friendless at the moment...</h2>
            <% end %>

            <div class="row">
              <% friends.each do |friend| %>

                <div class="col-sm-6">
                  <div class="card bottom-buffer">
                    <div class="card-body">
                      <div class="card-text">
                        <%= link_to friend.name, user_path(friend) %>

                        <% if user.id == current_user.id %>
                          <%= link_to 'Unfriend me',
                                      friending_path(friend),
                                      method: :delete,
                                      class: 'btn btn-secondary btn-sm ml-5' %>
                        <% end %>

                      </div>
                      <div class="card-text text-secondary"><%= "#{friend.friended_users.count} friends" %></div>
                    </div>
                  </div>
                </div>

              <% end %>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>