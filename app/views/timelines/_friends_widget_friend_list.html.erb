<% displayable_friends.each do |friend| %>
  <div class="col-sm-4">
    <%= display_profile_photo(friend, classes: 'img-thumbnail') %>
    <%= link_to UserDecorator.new(friend).name, timeline_path(friend) %>
  </div>
<% end %>

<% if user.friended_users.size > 6 %>
  <p class="card-text text-center">
    <%= link_to 'See more friends', friends_path(user) %>
  </p>
<% end %>