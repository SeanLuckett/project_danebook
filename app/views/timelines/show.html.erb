<div class="row">
  <div class="col-sm-10 offset-sm-1 .offset-md-1">
    <div class="row">
      <div class="col-sm-12">
        <%= render partial: 'users/profile_header', locals: { user: user } %>
      </div>
    </div>

    <div class="row top-buffer">
      <div class="col-sm-5">
        <div class="card">
          <div class="card-header">About</div>
          <div class="card-body">
            <p class="card-text"><strong>Born on:</strong> <%= user.formatted_birthdate %></p>
            <p class="card-text"><strong>Went to school at:</strong> <%= user.college %></p>
            <p class="card-text"><strong>Hometown:</strong> <%= user.hometown %></p>
            <p class="card-text"><strong>Lives in:</strong> <%= user.lives_in %></p>
          </div>
        </div>
      </div>

      <div class="col-sm-7">
        <div class="card">
          <div class="card-header">Post</div>
          <div class="card-body">
            <!-- Post form -->
          </div>
        </div>

        <% posts.each do |post| %>
            <div class="card top-buffer">
              <div class="card-body">
                <p><%= link_to user.name, user_path(user) %> <br>
                  <span class="text-secondary">Posted on <%= post.formatted_date %></span></p>

                <p><%= post.body %></p>
              </div>
              <div class="card-header">
                <div class="row">
                  <div class="col-sm-5">
                    <%= link_to 'Like', '#', class: 'mr-sm-2' %>
                    <%= link_to 'Comment', '#' %>
                  </div>
                  <% if current_user && current_user.id == user.id %>
                      <div class="col-sm-3 offset-sm-4">
                        <%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: 'You sure?' } %>
                      </div>
                  <% end %>
                </div>
              </div>
            </div>
        <% end %>
      </div>
    </div>


  </div>
</div>