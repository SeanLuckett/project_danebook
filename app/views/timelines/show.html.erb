<div class="row">
  <div class="col-sm-10 offset-sm-1 .offset-md-1">
    <div class="row">
      <div class="col-sm-12">
        <%= render partial: 'users/profile_header', locals: { user: user } %>
      </div>
    </div>

    <div class="row top-buffer">
      <div class="col-sm-5">
        <div class="card">
          <div class="card-header">About</div>
          <div class="card-body">
            <p class="card-text"><strong>Born on:</strong> <%= user.formatted_birthdate %></p>
            <p class="card-text"><strong>Went to school at:</strong> <%= user.college %></p>
            <p class="card-text"><strong>Hometown:</strong> <%= user.hometown %></p>
            <p class="card-text"><strong>Lives in:</strong> <%= user.lives_in %></p>
          </div>
        </div>

        <%= render partial: 'photos_widget',
                   locals: { displayable_photos: displayable_photos, user: user } %>

        <%= render partial: 'friends_widget',
                   locals: { displayable_friends: displayable_friends, user: user } %>

      </div>

      <div class="col-sm-7">
        <% if current_user && current_user.id == user.id %>
          <%= render partial: 'timelines/create_post', locals: { user: user } %>
        <% end %>

        <% posts.each do |post| %>
          <%= render partial: 'post', locals: { post: post, user: user } %>
        <% end %>
      </div>
    </div>


  </div>
</div>