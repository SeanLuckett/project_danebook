<div class="row">
  <ul class="nav nav-pills col-sm-7 offset-sm-3">
    <li class="nav-item nav-link <%= active_nav_item_if(timeline_path(user)) %>">
      <%= link_to_unless_current 'Timeline', timeline_path(user) %>
    </li>

    <li class="nav-item nav-link <%= active_nav_item_if(user_path(user)) %>">
      <%= link_to_unless_current 'About', user_path(user) %>
    </li>

    <li class="nav-item nav-link <%= active_nav_item_if(photo_list_path(user)) %>">
      <%= link_to_unless_current 'Photos', photo_list_path(user) %>
    </li>

    <li class="nav-item nav-link <%= active_nav_item_if(friends_path(user)) %>">
      <%= link_to_unless_current "Friends (#{user.friended_users.count})",
                                 friends_path(user) %>
    </li>

    <li class="nav-item">
      <% if current_user && current_user.id == user.id %>
          <%= link_to 'Edit profile', edit_user_path(user),
                      class: "nav-link #{active_nav_item_if(edit_user_path(user))}" %>
      <% end %>
    </li>
  </ul>
</div>