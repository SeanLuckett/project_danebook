<%= form_with(model: user, local: true) do |form| %>
    <div class="row">
      <div class="col">
        <% if user.errors.any? %>
            <div id="error_explanation" class=" alert alert-danger">
              <h2 class="h5"><%= pluralize(user.errors.count, 'error') %>:</h2>

              <ul class="list-unstyled">
                <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
    </div>

    <div class="row form-group">
      <div class="col"><%= form.text_field :first_name, class: 'form-control', placeholder: 'First name' %></div>
      <div class="col"><%= form.text_field :last_name, class: 'form-control', placeholder: 'Last name' %></div>
    </div>

    <div class="form-group">
      <%= form.text_field :email, class: 'form-control', placeholder: 'Your email' %>
    </div>

    <div class="form-group">
      <%= form.password_field :password, class: 'form-control', placeholder: 'Your new password' %>
    </div>

    <div class="form-group">
      <%= form.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirm your password' %>
    </div>

    <%= form.submit 'Sign up!', class: 'btn btn-success btn-block' %>
<% end %>
